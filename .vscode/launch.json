{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/${input:package}/lib/${input:package}/${input:test}",
            "args": [],
            "preLaunchTask": "build",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
          }
        ],
        "inputs": [
          {
            "id": "package",
            "type": "promptString",
            "description": "Package name",
            "default": "dtn_proxy"
          },
          {
            "id": "program",
            "type": "promptString",
            "description": "Program name",
            "default": "dtnproxy"
          }
    ]
}
